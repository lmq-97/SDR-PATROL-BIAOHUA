<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <!--小圆点-->
    <TextView
        android:id="@+id/patrol_dialog_unfinish_recycler_item_tv_dot"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_gravity="right"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/sdr_shape_circle"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--标题-->
            <TextView
                android:id="@+id/patrol_dialog_unfinish_recycler_item_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textColor="#333333"
                android:text="长生生物7月19日晚公告，全资子公司长春长生收到食药监管局行政处罚决定书" />
            <!--时间-->
            <TextView
                android:id="@+id/patrol_dialog_unfinish_recycler_item_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2018-07-22 01:50:30" />
        </LinearLayout>

        <TextView
            android:id="@+id/patrol_dialog_unfinish_recycler_item_tv_danger_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/patrol_shape_radius_5_outline_error_bg"
            android:padding="2dp"
            android:text="隐患8"
            android:textColor="#ff0000"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/patrol_dialog_unfinish_recycler_item_ll_goon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:background="?selectableItemBackground"
                android:padding="5dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/sdr_shape_circle"
                    android:padding="5dp"
                    android:src="@drawable/patrol_ic_arrow_right_24dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:tint="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="继续"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/patrol_dialog_unfinish_recycler_item_ll_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?selectableItemBackground"
                android:padding="5dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/sdr_shape_circle"
                    android:backgroundTint="#ff0000"
                    android:padding="5dp"
                    android:src="@drawable/patrol_ic_delete_black_24dp"
                    android:tint="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="放弃"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>