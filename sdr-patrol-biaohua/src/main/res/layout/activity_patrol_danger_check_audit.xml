<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="您的意见"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/patrol_danger_solve_check_audit_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/patrol_danger_solve_check_audit_rb_tongyi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="通过"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <RadioButton
                android:id="@+id/patrol_danger_solve_check_audit_rb_butongyi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="不通过"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />
        </RadioGroup>
    </LinearLayout>


    <EditText
        android:id="@+id/patrol_danger_solve_check_audit_edt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="left|top"
        android:hint="请填写您的意见"
        android:minHeight="100dp"
        android:padding="10dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/patrol_danger_solve_check_audit_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="确定" />
</LinearLayout>