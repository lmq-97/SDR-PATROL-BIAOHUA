<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/patrol_history_detail_device_recycler_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <!--检查内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/patrol_history_detail_device_recycler_item_tv_check_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="检查项" />

            <TextView
                android:id="@+id/patrol_history_detail_device_recycler_item_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="单选" />
        </LinearLayout>

        <TextView
            android:id="@+id/patrol_history_detail_device_recycler_item_tv_check_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="这是检查内容"
            android:textColor="#333"
            android:textSize="16sp" />
        <!--检查项-->
        <LinearLayout
            android:id="@+id/patrol_history_detail_device_recycler_item_ll_check_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/patrol_history_detail_device_recycler_item_tv_content_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="这是检查填写的描述这是检查填写的描述这是检查填写的描述这是检查填写的描述这是检查填写的描述"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/patrol_history_detail_device_recycler_item_rv_attchment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--抄表项-->
        <LinearLayout
            android:id="@+id/patrol_history_detail_device_recycler_item_ll_metereading_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>